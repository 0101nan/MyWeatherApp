<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/aqi_station_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="站点名称："/>
            <TextView
                android:id="@+id/aqi_station_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/aqi_station_name_title"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/aqi_station_qlty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空气质量:"/>
            <TextView
                android:id="@+id/aqi_station_qlty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/aqi_station_qlty_title"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/aqi_station_aqi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AQI:"/>
            <TextView
                android:id="@+id/aqi_station_aqi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/aqi_station_aqi_title"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView
            android:id="@+id/aqi_station_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主要污染物:"/>
        <TextView
            android:id="@+id/aqi_station_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/aqi_station_main_title"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>